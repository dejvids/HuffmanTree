<UserControl x:Class="HuffmanTree.View.NodeCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HuffmanTree.View"
             mc:Ignorable="d" 
            
            >
    <Viewbox Width="50" Height="50">
        <Grid Width="50" Height="50">
            <Ellipse Stroke="Black" Fill="#323D51" StrokeThickness="2" RenderTransformOrigin="0.5,0.5"/>
            <TextBlock x:Name="freqLbl" HorizontalAlignment="Center" Text="50" Style="{StaticResource nodeLabel}" TextAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        </Grid>
    </Viewbox>
</UserControl>
